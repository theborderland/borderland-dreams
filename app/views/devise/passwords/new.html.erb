<% content_for(:head) do %>
  <% browser_title = t(:change_your_password) + " - " + t(:browser_title_tag) %>
  <title><%= browser_title %></title>
<% end %>

<div class="passwords_new" dir=<%=t :html_direction %>>
  <h2><%=t :forgot_password %></h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, :class => "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit t(:reset_password_instructions) , class: "btn btn-success" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
