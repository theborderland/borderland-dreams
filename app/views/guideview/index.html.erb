<% content_for(:head) do %>
  <% browser_title = t(:browser_title_tag) %>
  <title><%= browser_title %></title>
  <%= javascript_include_tag 'blueimp_script' %> 
  <meta property="og:title" content="Dream Guide View" />
  <meta property="og:description" content="Dream Guide View" />
  <meta property="og:image" content="http://dreams.theborderland.se/assets/coverphoto.png" />
<% end %>

<div class="row">
  <h1>Dream List</h1>
  <br>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Dream</th>
        <th>Borderling email</th>
        <th>Min budget</th>
        <th>Max budget</th>
        <th>Current funding</th>
      </tr>
    </thead>
    <tbody>
      <% @camps.each do |camp| %>
        <tr>
          <td><%= truncate(camp.name, length: 60) %></td>
          <td><%= truncate(camp.creator.email, length: 60) %></td>
          <td><%= truncate(camp.minbudget, length: 60) %></td>
          <td><%= truncate(camp.maxbudget, length: 60) %></td>
          <td><%= truncate(camp.grants_received, length: 60) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>