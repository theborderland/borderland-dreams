<% image_path = image_path("coverphoto.png") %>

<header>
<div class="container coverphoto <%= yield(:cover_head) %>" style="background-image:url('<%= image_path %>');background-position: center; ">

  <div class="main_content top_menu">
      <div class="row">
        <div class="col-md-5">
          <h1><a class="header-top-menu" href="/"><%=t :top_headline_html %></a></h1>
        </div>
        <div class="col-md-7">
          <div class="header-nav">
            <% if I18n.locale == I18n.default_locale %>
              <%= link_to "EN", :lang=>'en'%>
            <% else %>
              <%= link_to "עב", :lang=>'he'%>
            <%end%>

            <div class="dropdown">
                <a class="dropdown-toggle" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"><%=t :top_headline_resources %></a>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                <li><a href="/pages/faq"><%=t :top_headline_faq %></a></li>
                <li><a href="/pages/olddreams"><%=t :top_headline_old_dreams %></a></li>
                <li><a href="/"><%=t :top_headline_dreams %></a></li>
              </ul>
            </div>
            <% if user_signed_in? and !Rails.application.config.x.firestarter_settings['disable_open_new_dream'] %>
            <%= link_to t("register_creation_menu"), new_camp_path %>
            <% end %>
            <% if !user_signed_in? %>
            <%= link_to t("login_menu"), new_user_session_path %>
            <% end %>
            <% if !user_signed_in? %>
            <%= link_to t("register_menu"), new_user_registration_path %>
            <% end %>
            <% if user_signed_in? %>
            <%= link_to t("logout_menu"), destroy_user_session_path, method: :delete %>
            <% end %>
          </div>
        </div>
      </div>
  </div>

</div>

</header>